<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNewProject.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <HorizontalStackLayout IsVisible="True" x:Name="OptionsLayout" HorizontalOptions="Center" Spacing="15" >
                <Button Text="Piedra" Clicked="OnOptionSelected" BorderWidth="2" BorderColor="Transparent" />
                <Button Text="Papel" Clicked="OnOptionSelected" BorderWidth="2" BorderColor="Transparent" />
                <Button Text="Tijeras" Clicked="OnOptionSelected" BorderWidth="2" BorderColor="Transparent" />
            </HorizontalStackLayout>
                       
            <Button x:Name="StartButton" Text="Empezar" Clicked="OnStartClicked" IsEnabled="False" />

            <Label x:Name="CountdownLabel" Text="3" FontSize="Header" TextColor="Coral" HorizontalOptions="Center" IsVisible="False" />

            <Label x:Name="ResultLabel" FontSize="Large" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
